<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/home.css">

  <h1>HOME! YELP CAMP!</h1>
  <div class="mb-3">
    <a href="/campgrounds"><button class="btn btn-dark btn-lg">Go to All Campgrounds</button></a>
  </div>

  <% if(!currentUser) { %>
    <div class="mb-3">
      <a href="/register"><button class="btn btn-info btn-lg">Register</button></a>
    </div>
    <div class="mb-3">
      <a href="/login"><button class="btn btn-success btn-lg">Login</button></a>
    </div>
  <% } else { %>
    <div class="mb-3">
      <a href="/logout"><button class="btn btn-danger btn-lg">Logout</button></a>
    </div>
  <% } %>


